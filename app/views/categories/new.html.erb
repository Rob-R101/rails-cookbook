<div class="banner">
  <%= cl_image_tag "arr61quvo3es8gegayck" %>
  <div class="container">
    <h1>Create a New Category</h1>
    <p>Organize your recipes the way you like</p>
  </div>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <div class="form-new">
        <h2>New Category</h2>
        <%= simple_form_for @category do |f| %>
          <%= f.input :name, label: false, placeholder: 'Italian, Asian, Desserts...' %>
          <%= f.submit class: "btn btn-flat w-100" %>
        <% end %>

        <%= link_to categories_path, class: "btn btn-ghost w-100 mt-3" do %>
          <i class="fa-solid fa-arrow-left"></i> Back to categories
        <% end %>
      </div>
    </div>
  </div>
</div>
