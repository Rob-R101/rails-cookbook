<div class="container">
  <h1>Your Lists</h1>
  <%= link_to "Create New Category", new_category_path, class: "btn btn-primary mb-4" %>

  <ul class="category-list list-unstyled">
    <% @categories.each do |category| %>
      <li class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
          <%= link_to category.name, category_path(category), class: "text-decoration-none" %>
          <%= link_to "Delete",
              category_path(category),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this category?" },
              class: "btn btn-danger" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
